	: TURKEY-oneline1 "*gobble*" ;
	: TURKEY-oneline2 "*gobble gobble*" ;
	: TURKEY-oneline3 "*gobblegobble*" ;
	: TURKEY-oneline4 "*gobble gobble gobble*" ;

	deck-new
