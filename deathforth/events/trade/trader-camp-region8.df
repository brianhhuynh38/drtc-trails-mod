value CAMPHUT
CAMPHUT $parse-rooms

locdef{

location: camphut
		max-rooms: 1
		entry-tags: camphut
		pre-script: set-theme-cabin
		script: set-theme-cabin
		post-script: 
		
		room-choice: camphut
			room-weight: 10
			room-count: 1
			room-script: ndx 
			filter-only

}

map{ regiondef{

trade-camp-reset

: bldg tanchor!
	"camphut" $picklocid addloc prefab{ mrand 7 house1 } 
;

' plotdirt >defer ft

: pt
	xyp.xy ft // Plot the current floor by default


	xyp.i char t = if wooded then;
	xyp.i char [ = if dirtstart then;
	xyp.i char ] = if gravelendw then;
	xyp.i char @ = if xyp.xy bldg then;
	xyp.i char Z = if tnomey-spawn then;
;

"
