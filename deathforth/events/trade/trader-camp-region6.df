constant maplayout

: plotmap
	0 -1 maplayout xyplot: pt
;

: site-setup
	1 no_time!
	15 19 rnd o'clock

	30 %chance if 0 1 frnd weather! 0.5 1.5 frnd wind_force! else -1 1 frnd wind_force! then

	-1 -1 w h dirtbox
	plotmap
	mission{ no-edge-spawns }

	// Put char and chars in middle of map
	50 %mv-up
	50 %chars-up
;

region: campsite6
	w: maplayout layoutw
	h: maplayout layouth

	trade-mode

	post-script: site-setup

} }
