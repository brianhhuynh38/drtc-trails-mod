: gimmestatupdate  
($ cname .. " now has " .. cchar .strength@ .. " strength and " .. cchar .fitness@ .. " fitness." $) cyoa-text! goodfx
;
cyoa-choice: gimmestata
	6 STAT_STRENGTH cchar .stat! 6 STAT_FITNESS cchar .stat!
	gimmestatupdate
;
cyoa-choice: gimmestatb
	6 STAT_FITNESS cchar .stat!
	gimmestatupdate
;
