	2.5 ( 1.2 ) 9 20 rnd 1 siegecast
	"events/siege/region/rescuegas.df" $load-region
		choice( "Attempt Rescue!" )choice: premission
		gas-draw
;

cyoa: siege1-rescuerest
	"Roadside Rescue" cyoa-title!
	($ Thegroup .. " sees a person fleeing into a rest stop, with a horde pursuing them. This person could still be saved!" $) cyoa-text! basic-tone
	2.5 ( 1.2 ) 9 20 rnd 1 siegecast
	"events/siege/region/rescuerest.df" $load-region
		choice( "Attempt Rescue!" )choice: premission
		gas-draw
;

cyoa: siege1-dirtroadeasy
	"Stuck in a Ditch" cyoa-title!
	($ "The car gets stuck in the ditch near a crappy dirt road. " .. Thegroup .. " is close to getting the car out when a roaming horde draws near. Now " .. gthey .. " must distract the zombies from getting too close." $) cyoa-text! basic-tone
	1.8 ( 1.1, then 2 ) 9 20 rnd 0.3 + 0.7 siegecast
	"events/siege/region/road-dirt.df" $load-region
		choice( "Try to Survive" )choice: premission
;

// Endgame Canada sieges

cyoa: canada-siege2
	"Final Siege on the Death Road" cyoa-title!
	($ "Nearly at the border to Canada, " .. thegroup .. " is surrounded by seemingly endless undead. To survive, " .. gthey .. " must face one last siege. " .. "This is the final siege, but not the last battle!" rbold $) cyoa-text! basic-tone heal-event
	2.1 12 14 rnd 3 siegecast // prev 2.3, 2.6 and 2 hours ... 2.3 at 2x difficulty still gives NO HOPE
	// At 0.8 siegediff scale, need 2.9 diff for NO HOPE ... at 0.9 need 2.546 so 2.6
	"events/siege/region/midopen1.df" $load-region
		choice( "ALL OR NOTHING!" )choice: premission
;

cyoa: canada-siege1
	"The Rough Morning" cyoa-title!
	($ Thegroup .. " leaves camp and is attacked by a gigantic wall of undead. " .. gTheyare .. " forced to prepare for an all out battle. " .. "This is just the first siege of today!" rbold $) cyoa-text! basic-tone heal-event
	3 7 8 rnd 1 siegecast // prev 2, and 3 hours
	"events/siege/region/midopen1.df" $load-region
		choice( "Survive it!" )choice: premission
;

cyoa: canada-city
	"City of Crushed Hopes" cyoa-title!
	($ "After that huge siege, " .. Thegroup .. " was able to advance north towards the Canadian border. On the way is a city filled with swarms of undead and the bleached bones of others who almost made it." $) cyoa-text! basic-tone
	2.7 10 12 rnd 0 zforecast // formerly 3.5 diff
	"events/city/building-pick-test-region-canada.df" $load-region
		choice( "Scavenge for ammo" )choice: premission
		choice( "Pass it by" )choice
;

